{% extends 'base.html.twig' %}

{% block title %}
	{{ article.title }}
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mt-4">{{ article.title }}</h1>

		<div class="d-flex justify-content-between">
			<p class="text-muted">Published on
				{{ article.createdAt | date('d/m/Y à H:i') }}</p>

			<div>
				<a href="{{ path('article_modifier', {'slug': article.slug}) }}" class="btn btn-primary">
					<i class="fas fa-edit"></i>
					Modifier
				</a>
				<form action="{{ path('article_supprimmer', {'slug': article.slug}) }}" method="post" style="display: inline-block;">
					<button type="submit" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet article?')">
						<i class="fas fa-trash-alt"></i>
						Supprimer
					</button>
				</form>
			</div>

		</div>

		<div class="mb-4">{{ article.intro }}</div>

		<img class="img-fluid mb-4" src="{{ article.image }}" alt="Photo de l'article {{ article.title }}">

		<div class="mb-4">
			{{ article.content | raw }}
		</div>

		<div class="container">
			<div class="comment-section border p-3 mb-4">
				<h4 class="comment-heading">Comments</h4>
				<p class="text-muted mb-0 comment-prompt">
					<i class="fas fa-comments"></i>
					Be the first to comment!
				</p>
			</div>
		</div>
	</div>
{% endblock %}
