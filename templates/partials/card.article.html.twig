 
{% set symfony = {
    title: 'symfony',
    intro: 'Symfony est un framework PHP complet',
    author: 'Fabien Potencier',
    image: 'https://angular.io/assets/images/logos/angular/angular.svg'
} %}

{% set angular = {
    title: 'angular',
    intro: 'Angular le framework de Google',
    author: 'Angus Lard',
    image: 'https://neo7.fr/wp-content/uploads/2018/01/symfony-logo.png'
} %}


{% set laravel = {
    title: 'laravel',
    intro: 'Laravel est un framework PHP aussi',
    author: 'Lara Velle',
    image: 'https://jf-blog.fr/wp-content/uploads/2018/07/laravel-logo.png'
} %}



<div class="row">
  {% for articles in [symfony, angular, laravel] %}
    <div class="col-4">
      <div class="card bg-light my-5 shadow">
        <h3 class="card-header">{{ articles.title | capitalize }}</h3>
        <img height="350px" src="{{ articles.image }}" alt="Card image">
        <div class="card-body">
          <p class="card-text">{{ articles.intro }}</p>
          <a href="#" class="btn btn-primary rounded">Lire la suite</a>
          <div class="my-3">
            <a href="#" class="card-link">{{ articles.author }}</a>
          </div>
        </div>
        <div class="card-footer text-muted">
          Il y a 2 jours
        </div>
      </div>
    </div>
  {% endfor %}
</div>
