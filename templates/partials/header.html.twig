{% set user = {
    firstName: 'arnold',
    lastName: 'cengeli',
    role: 'user',
    isConnected: false
} %}


<header>
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark">

		<a class="navbar-brand" href="{{path("home_page")}}">
			YesCode
		</a>

		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>

		<div class="collapse navbar-collapse" id="navbarColor01">
			<ul class="navbar-nav mr-auto">

				<li class="nav-item">
					<a class="nav-link" href="{{path("home_page")}}">
						<i class="fa fa-home"></i>
						Accueil
					</a>
				</li>

				<li class="nav-item">
					<a class="nav-link" href="#">
						<i class="fa fa-newspaper"></i>
						Articles
					</a>
				</li>

			</ul>
			<ul class="navbar-nav ml-auto">
				<li class="nav-item dropdown">
					<a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
						<i class="fa fa-user"></i>
						{{ user.firstName | capitalize}} {{user.lastName | capitalize}}
					</a>
					<div class="dropdown-menu dropdown-menu-right">
						<a class="dropdown-item" href="#">Mon Profil</a>
						<a class="dropdown-item" href="#">Mes articles</a>
					{% if user.role == "admin" %}
						<a class="dropdown-item" href="#">Espace Admin</a>
					{% endif %}
						    <div class="dropdown-divider"></div>
					{% if user.isConnected %}
                            <a class="dropdown-item" href="#">Deconnexion</a>
						{% else %}
						    <a class="dropdown-item" href="#"><i class="fas fa-user-plus"></i> Inscription</a>
							<a class="dropdown-item" href="#"><i class="fas fa-sign-in-alt"></i> Connexion</a>
					{% endif %}
						
						
					</div>
				</li>
			</ul>
		</div>
	</nav>
