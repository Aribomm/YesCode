<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Avatar</th>
      <th scope="col">Nom complet</th>
      <th scope="col">Email</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    {% for user in users %}
      <tr>
        <th scope="row">{{ user.id }}</th>
        <td><img src="{{ user.avatar }}" alt="Avatar"></td>
        <td>{{ user.firstName ~ ' ' ~ user.lastName }}</td>
        <td>{{ user.email }}</td>
        <td>
          <a href="{{ path('user_show', {'slug': user.slug}) }}" class="btn btn-primary"><i class="fas fa-eye"></i></a>
          <a href="{{ path('user_delete', {'slug': user.slug}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
        </td>
      </tr>
    {% endfor %}
  </tbody>
</table>
