{% extends 'base.html.twig' %}

{% block content %}
    <h1>Nos Articles</h1>
    <div class="row">
        {% for article in articles %}
            <div class="col-4">
                <div class="card bg-light my-5 shadow text-center">
                    <h3 class="card-header">{{ article.title | capitalize }}</h3>
                    <img height="300px" src="{{ article.image }}" alt="Card image">
                    <div class="card-body">
                        <p class="card-text">{{ article.intro }}</p>
                        <a href="#" class="btn btn-primary rounded">Lire la suite</a>
                        <div class="my-3">
                            <a href="#" class="card-link">{{ article.author }}</a>
                        </div>
                    </div>
                    <div class="card-footer text-muted">
                        {{ article.createdAt|date('d/m/Y') }}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
